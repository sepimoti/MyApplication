<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DigiKala">
    <ImageView
        android:id="@+id/imgDigi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/digikala_top"
        android:layout_alignStart="@id/btnInfo"
        android:layout_alignEnd="@id/btnInfo"/>
    <Button
        android:id="@+id/btnInfo"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/textcolor"
        android:text="info@digikala.com"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"/>
    <Button
        android:id="@+id/btnTamas"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="تماس با دیجی کالا"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_baseline_headset_24"
        android:layout_below="@+id/btnInfo"
        android:layout_alignStart="@id/btnInfo"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnReport"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="گزارش مشکلات اپلیکیشن"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:drawableRight="@drawable/ic_baseline_bug_report_24"
        android:layout_below="@id/btnTamas"
        android:layout_alignStart="@id/btnTamas"
        android:layout_marginTop="100dp"/>
    <ImageView
        android:id="@+id/imgDigiend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/digikala_end"
        android:layout_below="@id/btnReport"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtVer"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="نسخه 1.9.3"
        android:textSize="15dp"
        android:textColor="@color/textcolor"
        android:layout_toStartOf="@id/imgDigiend"
        android:layout_below="@id/btnReport"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="70dp"/>
    <TextView
        android:id="@+id/txtDigi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="دیجی کالا"
        android:textSize="15dp"
        android:textColor="@color/textcolor"
        android:layout_toEndOf="@id/imgDigiend"
        android:layout_below="@id/btnReport"
        android:layout_marginTop="35dp"
        android:layout_marginStart="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="کلیه حقوق نزد دیجی کالا محفوظ است."
        android:textColor="@color/textcolor"
        android:textSize="15dp"
        android:layout_below="@id/imgDigiend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="حريم خصوصي"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:layout_below="@id/txtDigi"
        android:layout_alignEnd="@id/txtDigi"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="شرایط استفاده"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:layout_below="@id/txtVer"
        android:layout_alignStart="@id/txtVer"
        android:layout_marginTop="50dp"/>
</RelativeLayout>